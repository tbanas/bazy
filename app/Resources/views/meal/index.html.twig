{% extends 'base.html.twig' %}

{% block body %}
    <h1>Meal list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Time</th>
                <th>Type</th>
                <th>Kcal</th>
                <th>User</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for meal in meals %}
            <tr>
                <td><a href="{{ path('meal_show', { 'id': meal.id }) }}">{{ meal.id }}</a></td>
                <td>{% if meal.time %}{{ meal.time|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ meal.type }}</td>
                <td>{{ meal.kcal }}</td>
                <td>{{ meal.user }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('meal_show', { 'id': meal.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('meal_edit', { 'id': meal.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('meal_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
